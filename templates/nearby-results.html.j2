{%- extends "base.html.j2" %}
{%- block title %}{{ title }}{%- endblock %}
{%- block content %}
<div class="row h-100">
    <div id="content" class="col-sm-9 h-100">
        <div class="page-banner">
            {%- if no_centroid %}
            nearby
            {%- else %}
            {{ total | commafy }}
            <span class="slug">
                places within {{ distance | commafy }}m of {{ lat }}, {{ lng }}
            </span>
            {%- endif %}
        </div>
        <div id="search-results">
            {%- if no_centroid %}
            <p>&#x1F622; {{ name }} (WOEID {{ woeid }}) visits Null Island so we can't search for nearby places.</p>
            {%- elif results %}
            <ol id="query_results">
            {%- for place in results %}
                <li>
                    <a href="{{ url_for('place_endpoint', woeid=place['woe_id']) }}">{{ place['name'] }}</a>
                    <div class="slug">{{ place['placetype_name']|lower }} ~ {{ place['distance_m']|int | commafy }}m away</div>
                </li>
            {%- endfor %}
            </ol>
            <p class="again">Search again including <a href="{{ url_for('nearby_endpoint') }}?lat={{ lat }}&lng={{ lng }}&distance={{ distance }}&include=deprecated">deprecated places</a>?</p>
            {%- include "includes/pagination.html.j2" %}
            {%- else %}
            <p>&#x1F622; nothing found nearby ...</p>
            {%- endif %}
        </div>
        {%- include "includes/sidebar-info.html.j2" %}
        {%- include "includes/footer.html.j2" %}
    </div>
    {%- include "includes/sidebar.html.j2" %}
</div>
{%- endblock %}
