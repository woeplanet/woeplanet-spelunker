{%- extends "base.html.j2" %}
{%- block title %}{{ title }}{%- endblock %}
{%- block content %}
<div class="row h-100">
    <div id="content" class="col-sm-9 h-100">
        <div class="page-banner">
            {{ pagination.total | commafy }}
            <span class="slug">
                results for <q>{{ q }}</q>
                {%- if search_type and search_type != 'any' %}
                ({{ search_type }} names)
                {%- endif %}
            </span>
        </div>
        <div id="search-results">
            {%- if results %}
            <ol id="query_results">
            {%- for place in results %}
                <li>
                    <a href="{{ url_for('place_endpoint', woeid=place['woe_id']) }}">{{ place['name'] }}</a>
                    <div class="slug">{{ place['alias_name'] }} is {{ place['language']|langname|anyfy }} <em>{{ place['name_type']|name_type }}</em> {{ place['placetype_name']|lower }} name in {{ place['country_name']|default('Unknown', true) }}</div>
                </li>
            {%- endfor %}
            </ol>
            <p class="again">Search again including <a href="{{ url_for('search_endpoint') }}?q={{ q|urlencode }}&name-type={{ search_type }}&include=deprecated">deprecated places</a>, <a href="{{ url_for('search_endpoint') }}?q={{ q|urlencode }}&name-type={{ search_type }}&include=unknown">unknown places</a>, places that <a href="{{ url_for('search_endpoint') }}?q={{ q|urlencode }}&name-type={{ search_type }}&include=nullisland">visit Null Island</a> or <a href="{{ url_for('search_endpoint') }}?q={{ q|urlencode }}&name-type={{ search_type }}&include=deprecated,unknown,nullisland">everything</a>?</p>
            {%- include "includes/pagination.html.j2" %}
            {%- else %}
            <p>&#x1F622; nothing found ...</p>
            {%- endif %}
        </div>
        {%- include "includes/sidebar-info.html.j2" %}
        {%- include "includes/search-query.html.j2" %}
        {%- include "includes/footer-bottom.html.j2" %}
    </div>
    {%- include "includes/sidebar.html.j2" %}
</div>
{%- endblock %}

